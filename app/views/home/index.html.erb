<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <ul class="list-group">
        <li class="list-group-item">
          類別
          <ul class="list-group">
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
          </ul>
        </li>
        <li class="list-group-item">
          類別
          <ul class="list-group">
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12">
          <div class="jumbotron">

            <h1> <%= @ad[:title]%> </h1>
            <p> <%= @ad[:des]%> </p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button"> <%= @ad[:action_title]%> </a></p>
          </div>
        </div>
      </div>
      <div class="row">

        <% @products.each do |product| %> 
          <div class="col-xs-3">
            <div class="thumbnail">
            <%= image_tag product[:image_url]%>
            <div class="caption">
              <h3> <%= "#{product[:id]}. #{product[:name]}"%> </h3>
              <p><%= product[:description]%></p>
              <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
            </div>
          </div>
        </div>

        <% end %>


      </div>

      <div class="row">
        <div class="col-xs-12">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <% if @page > @first_page%>
                  <%= link_to root_path(page: (@page - 1)) do%>
                  Previous
                  <% end %>
                <% end %>
              </li>
                <% (@first_page..@last_page).each do |page_num| %>
                  <li><%= link_to page_num, root_path(page: page_num)%></li>
                <% end%>
              <li class="page-item">
                <% if @page < @last_page%>
                  <%= link_to root_path(page: (@page + 1)) do%>
                    Next
                  <% end %>
                <% end %>
              <%# <a class="page-link" href="#"></a> %>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      
    </div>
  </div>
</div>

